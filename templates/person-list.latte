{layout 'layout.latte'}

{block title}
  List
{/block}

{block content}
  <div>
    <h2>List page</h2>
    {foreach $persons as $person}
      <div id="person_{$person['id']}">
        <p>{$iterator->counter}. <a href="{link personDetail ['id' => $person['id']]}">{$person['name']}</a></p>
      </div>
    {/foreach}
  </div>
{/block}